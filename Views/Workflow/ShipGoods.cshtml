@model FlowerInventory.ViewModels.ShipmentViewModel

@{
    ViewData["Title"] = "出貨作業";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-shipping-fast text-success"></i> 出貨作業</h2>
        <a href="@Url.Action("Dashboard")" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> 返回儀表板
        </a>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h5 class="card-title mb-0">新增出貨</h5>
                </div>
                <div class="card-body">
                    <form asp-action="ShipGoods" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group mb-3">
                            <label asp-for="FlowerId" class="control-label">選擇花卉</label>
                            <select asp-for="FlowerId" class="form-control">
                                <option value="">-- 請選擇花卉 --</option>
                                @if (Model.AvailableFlowers != null)
                                {
                                    foreach (var flower in Model.AvailableFlowers)
                                    {
                                        <option value="@flower.Id">@flower.Name (@flower.Variety)</option>
                                    }
                                }
                            </select>
                            <span asp-validation-for="FlowerId" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Quantity" class="control-label">出貨數量</label>
                            <input asp-for="Quantity" class="form-control" min="1" />
                            <span asp-validation-for="Quantity" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Reason" class="control-label">出貨原因</label>
                            <input asp-for="Reason" class="form-control" placeholder="例如：銷售出貨、樣品贈送等" />
                            <span asp-validation-for="Reason" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="CustomerName" class="control-label">客戶名稱 (可選)</label>
                            <input asp-for="CustomerName" class="form-control" />
                            <span asp-validation-for="CustomerName" class="text-danger"></span>
                        </div>

                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="fas fa-check"></i> 提交出貨
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        // 頁面載入時，如果表單驗證失敗，保持選擇的值
        document.addEventListener('DOMContentLoaded', function() {
            // 使用 asp-for，讓選擇器自動保持表單值
            console.log('出貨作業表單已載入');
        });
    </script>
}