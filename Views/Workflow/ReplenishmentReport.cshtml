@model List<FlowerInventory.Services.EnhancedInventoryViewModel>

@{
    ViewData["Title"] = "補貨建議報告";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-clipboard-check text-success"></i> 補貨建議報告</h2>
        <a href="@Url.Action("Dashboard")" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> 返回儀表板
        </a>
    </div>

    <!-- 統計卡片 -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">總建議數</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.TotalRecommendations</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-list fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-danger shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">緊急補貨</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.UrgentCount</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-exclamation-triangle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">建議補貨</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.SuggestedCount</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-clipboard-list fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">最後更新</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@DateTime.Now.ToString("MM/dd HH:mm")</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-clock fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow">
        <div class="card-header bg-success text-white">
            <h6 class="m-0 font-weight-bold"><i class="fas fa-list-ul"></i> 補貨建議清單</h6>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-bordered table-hover" id="replenishmentTable">
                        <thead class="table-light">
                            <tr>
                                <th>花名</th>
                                <th>分類</th>
                                <th>當前庫存</th>
                                <th>安全庫存</th>
                                <th>建議訂購量</th>
                                <th>建議級別</th>
                                <th>覆蓋天數</th>
                                <th>操作</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="@GetRecommendationRowClass(item.Recommendation?.RecommendationLevel)">
                                    <td>
                                        <span class="badge @GetABCClassBadge(item.ABCClass)">@item.ABCClass</span>
                                        @item.Name
                                        @if (!string.IsNullOrEmpty(item.Variety))
                                        {
                                            <br /><small class="text-muted">@item.Variety</small>
                                        }
                                    </td>
                                    <td>@item.Category</td>
                                    <td>
                                        <span class="fw-bold @(item.CurrentStock < item.SafetyStock ? "text-danger" : "text-success")">
                                            @item.CurrentStock
                                        </span>
                                    </td>
                                    <td>@Math.Ceiling(item.SafetyStock)</td>
                                    <td>
                                        <span class="fw-bold">@item.Recommendation?.SuggestedOrderQuantity</span>
                                    </td>
                                    <td>
                                        <span class="badge @GetRecommendationBadgeClass(item.Recommendation?.RecommendationLevel)">
                                            @item.Recommendation?.RecommendationLevel
                                        </span>
                                    </td>
                                    <td>@item.StockCoverageDays.ToString("F1") 天</td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a href="@Url.Action("ReceiveGoods", "Workflow", new { flowerId = item.FlowerId })" 
                                               class="btn btn-outline-primary" title="立即進貨">
                                                <i class="fas fa-truck-loading"></i> 進貨
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-4">
                    <i class="fas fa-check-circle fa-3x text-success mb-3"></i>
                    <h5>目前沒有需要補貨的項目</h5>
                    <p class="text-muted">所有庫存都在安全水平以上</p>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#replenishmentTable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/zh-HANT.json'
                },
                pageLength: 25,
                order: [[5, 'asc']] // 按建議級別排序
            });
        });
    </script>
}

@functions {
    string GetABCClassBadge(string abcClass)
    {
        return abcClass switch
        {
            "A" => "bg-danger",
            "B" => "bg-warning", 
            "C" => "bg-success",
            _ => "bg-secondary"
        };
    }

    string GetRecommendationBadgeClass(string? level)
    {
        return level switch
        {
            "CRITICAL" => "bg-danger",
            "URGENT" => "bg-danger",
            "SUGGESTED" => "bg-warning",
            _ => "bg-secondary"
        };
    }

    string GetRecommendationRowClass(string? level)
    {
        return level switch
        {
            "CRITICAL" => "table-danger",
            "URGENT" => "table-danger",
            "SUGGESTED" => "table-warning",
            _ => ""
        };
    }
}