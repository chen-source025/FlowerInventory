@model IEnumerable<FlowerInventory.Models.Batch>

@{
    ViewData["Title"] = "批次管理";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-clipboard-list text-success"></i> 批次管理</h2>
        <a href="@Url.Action("Dashboard", "Workflow")" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> 返回儀表板
        </a>
    </div>

    <!-- 統計卡片 -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">總批次數</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.TotalBatches</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-list fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">即將到期</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.ExpiringBatches</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-exclamation-triangle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-danger shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">已過期</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.ExpiredBatches</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-times-circle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">平均合格率</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.AvgPassRate?.ToString("P2")</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-check-circle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow">
        <div class="card-header bg-success text-white">
            <h6 class="m-0 font-weight-bold"><i class="fas fa-list-ul"></i> 批次清單</h6>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-bordered table-hover" id="batchesTable">
                        <thead class="table-light">
                            <tr>
                                <th>批號</th>
                                <th>花卉</th>
                                <th>進貨數量</th>
                                <th>合格數量</th>
                                <th>合格率</th>
                                <th>收貨日期</th>
                                <th>到期日</th>
                                <th>狀態</th>
                                <th>操作</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="@(item.IsExpiringSoon ? "table-warning" : "") @(item.IsExpired ? "table-danger" : "")">
                                    <td>@item.BatchNo</td>
                                    <td>@item.Flower.Name</td>
                                    <td>@item.QuantityReceived</td>
                                    <td>@item.QuantityPassed</td>
                                    <td>
                                        <span class="badge @GetPassRateBadge(item.PassRate)">
                                            @item.PassRate.ToString("P2")
                                        </span>
                                    </td>
                                    <td>@item.ReceivedDate.ToString("yyyy/MM/dd")</td>
                                    <td>@item.ExpiryDate?.ToString("yyyy/MM/dd")</td>
                                    <td>
                                        <span class="badge @GetStatusBadge(item.Status)">
                                            @GetStatusText(item.Status)
                                        </span>
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            @if (item.Status == BatchStatus.Received)
                                            {
                                                <a href="@Url.Action("Inspection", "Workflow", new { batchId = item.Id })" 
                                                   class="btn btn-outline-warning" title="品檢">
                                                    <i class="fas fa-clipboard-check"></i>
                                                </a>
                                            }
                                            <!-- 修正：改為按鈕並添加必要的類名和數據屬性 -->
                                            <button type="button" class="btn btn-outline-info batch-detail-btn" 
                                                    data-batch-id="@item.Id" title="查看詳情">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-4">
                    <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                    <h5>暫無批次資料</h5>
                    <p class="text-muted">請先進行進貨作業</p>
                    <a href="@Url.Action("ReceiveGoods", "Workflow")" class="btn btn-success">
                        <i class="fas fa-truck-loading"></i> 新增進貨
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<!-- 批次詳情模態對話框 -->
<div class="modal fade" id="batchDetailModal" tabindex="-1" aria-labelledby="batchDetailModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title" id="batchDetailModalLabel">
                    <i class="fas fa-info-circle"></i> 批次詳情
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="batchDetailContent">
                <!-- 內容將透過 JavaScript 動態載入 -->
                <div class="text-center">
                    <div class="spinner-border text-success" role="status">
                        <span class="visually-hidden">載入中...</span>
                    </div>
                    <p class="mt-2">載入批次詳情中...</p>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times"></i> 關閉
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // 初始化 DataTable
            $('#batchesTable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/zh-HANT.json'
                },
                pageLength: 25,
                order: [[5, 'desc']] // 按收貨日期降序
            });

            // 批次詳情按鈕點擊事件
            $(document).on('click', '.batch-detail-btn', function () {
                const batchId = $(this).data('batch-id');
                loadBatchDetails(batchId);
            });

            function loadBatchDetails(batchId) {
                // 顯示載入狀態
                $('#batchDetailContent').html(`
                    <div class="text-center">
                        <div class="spinner-border text-success" role="status">
                            <span class="visually-hidden">載入中...</span>
                        </div>
                        <p class="mt-2">載入批次詳情中...</p>
                    </div>
                `);

                // 顯示模態框
                const modal = new bootstrap.Modal(document.getElementById('batchDetailModal'));
                modal.show();

                // 取得批次詳情
                $.get('/Inventory/GetBatchDetails?id=' + batchId, function (data) {
                    if (data.success && data.data.exists) {
                        const batch = data.data;
                        const content = `
                            <div class="row">
                                <div class="col-md-6">
                                    <dl>
                                        <dt>批號：</dt>
                                        <dd><strong class="text-success">${batch.batchNo}</strong></dd>
                                        
                                        <dt>花卉名稱：</dt>
                                        <dd>${batch.flowerName}</dd>
                                        
                                        <dt>收貨數量：</dt>
                                        <dd>${batch.quantityReceived} 株</dd>
                                        
                                        <dt>合格數量：</dt>
                                        <dd>${batch.quantityPassed} 株</dd>
                                        
                                        <dt>不合格數量：</dt>
                                        <dd>${batch.quantityReceived - batch.quantityPassed} 株</dd>
                                    </dl>
                                </div>
                                <div class="col-md-6">
                                    <dl>
                                        <dt>收貨日期：</dt>
                                        <dd>${batch.receivedDate}</dd>
                                        
                                        <dt>到期日：</dt>
                                        <dd class="${batch.isExpiringSoon ? 'text-warning fw-bold' : ''}">
                                            ${batch.expiryDate || '未設定'}
                                            ${batch.isExpiringSoon ? ' ⚠️ 即將到期' : ''}
                                        </dd>
                                        
                                        <dt>合格率：</dt>
                                        <dd>
                                            <div class="progress" style="height: 25px;">
                                                <div class="progress-bar ${getProgressBarClass(batch.passRate)}" 
                                                     style="width: ${parseFloat(batch.passRate) * 100}%;">
                                                    ${batch.passRate}
                                                </div>
                                            </div>
                                        </dd>
                                        
                                        <dt>狀態：</dt>
                                        <dd><span class="badge ${getStatusBadgeClass(batch.status)}">${getStatusDisplayText(batch.status)}</span></dd>
                                        
                                        <dt>距離到期天數：</dt>
                                        <dd class="${batch.daysUntilExpiry < 0 ? 'text-danger fw-bold' : batch.daysUntilExpiry <= 3 ? 'text-warning fw-bold' : ''}">
                                            ${batch.daysUntilExpiry < 0 ? '已過期' : `${batch.daysUntilExpiry} 天`}
                                        </dd>
                                    </dl>
                                </div>
                            </div>
                            ${batch.inspectionNote ? `
                            <div class="row mt-3">
                                <div class="col-12">
                                    <dt>品檢備註：</dt>
                                    <dd class="border rounded p-2 bg-light">${batch.inspectionNote}</dd>
                                </div>
                            </div>
                            ` : ''}
                            <div class="row mt-3">
                                <div class="col-12">
                                    <div class="alert ${getExpiryAlertClass(batch.daysUntilExpiry, batch.isExpiringSoon)}">
                                        <i class="fas ${getExpiryIconClass(batch.daysUntilExpiry, batch.isExpiringSoon)}"></i>
                                        ${getExpiryMessage(batch.daysUntilExpiry, batch.isExpiringSoon)}
                                    </div>
                                </div>
                            </div>
                        `;
                        $('#batchDetailContent').html(content);
                    } else {
                        $('#batchDetailContent').html(`
                            <div class="alert alert-danger">
                                <i class="fas fa-exclamation-triangle"></i>
                                ${data.message || '載入批次詳情失敗'}
                            </div>
                        `);
                    }
                }).fail(function () {
                    $('#batchDetailContent').html(`
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-triangle"></i>
                            無法載入批次詳情，請稍後再試
                        </div>
                    `);
                });
            }

            function getProgressBarClass(passRate) {
                const rate = parseFloat(passRate);
                if (rate >= 0.9) return 'bg-success';
                if (rate >= 0.7) return 'bg-warning';
                return 'bg-danger';
            }

            function getStatusBadgeClass(status) {
                switch (status) {
                    case 'Active': return 'bg-success';
                    case 'Received': return 'bg-primary';
                    case 'Inspected': return 'bg-info';
                    case 'Expired': return 'bg-danger';
                    case 'Discarded': return 'bg-secondary';
                    default: return 'bg-secondary';
                }
            }

            function getStatusDisplayText(status) {
                switch (status) {
                    case 'Active': return '有效';
                    case 'Received': return '已收貨';
                    case 'Inspected': return '已品檢';
                    case 'Expired': return '已過期';
                    case 'Discarded': return '已報廢';
                    default: return status;
                }
            }

            function getExpiryAlertClass(daysUntilExpiry, isExpiringSoon) {
                if (daysUntilExpiry < 0) return 'alert-danger';
                if (isExpiringSoon) return 'alert-warning';
                return 'alert-info';
            }

            function getExpiryIconClass(daysUntilExpiry, isExpiringSoon) {
                if (daysUntilExpiry < 0) return 'fa-exclamation-triangle';
                if (isExpiringSoon) return 'fa-exclamation-circle';
                return 'fa-info-circle';
            }

            function getExpiryMessage(daysUntilExpiry, isExpiringSoon) {
                if (daysUntilExpiry < 0) {
                    return '此批次已過期！請立即處理。';
                } else if (isExpiringSoon) {
                    return `此批次將在 ${daysUntilExpiry} 天後到期，請優先安排銷售！`;
                } else {
                    return `此批次還有 ${daysUntilExpiry} 天到期，庫存狀態正常。`;
                }
            }
        });
    </script>
}

@functions {
    string GetPassRateBadge(decimal passRate)
    {
        return passRate switch
        {
            >= 0.9m => "bg-success",
            >= 0.7m => "bg-warning",
            _ => "bg-danger"
        };
    }

    string GetStatusBadge(BatchStatus status)
    {
        return status switch
        {
            BatchStatus.Received => "bg-secondary",
            BatchStatus.Inspected => "bg-info",
            BatchStatus.Active => "bg-success",
            BatchStatus.Expired => "bg-danger",
            BatchStatus.Discarded => "bg-dark",
            _ => "bg-secondary"
        };
    }

    string GetStatusText(BatchStatus status)
    {
        return status switch
        {
            BatchStatus.Received => "已收貨",
            BatchStatus.Inspected => "已品檢",
            BatchStatus.Active => "有效",
            BatchStatus.Expired => "已過期",
            BatchStatus.Discarded => "已報廢",
            _ => status.ToString()
        };
    }
}