<!DOCTYPE html>
<html lang="zh-TW">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - 花卉庫存管理系統</title>
    
    <!-- 本地載入 Bootstrap 以便 Dreamweaver 預覽 -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    
    <!-- 為 Dreamweaver 設計時提供預設標題 -->
    @if (ViewData["Title"] == null)
    {
        <title>花卉庫存管理系統</title>
    }
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-success border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    🌸 花卉庫存管理系統
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" 
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Home" asp-action="Index">首頁</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Workflow" asp-action="Dashboard">作業儀表板</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link text-light dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">庫存管理</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Workflow" asp-action="InventoryOverview">庫存總覽</a></li>
                                <li><a class="dropdown-item" asp-controller="Flowers" asp-action="Index">花卉管理</a></li>
                                <li><a class="dropdown-item" asp-controller="Inventory" asp-action="Batches">批次管理</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link text-light dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">作業流程</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Workflow" asp-action="ReceiveGoods">進貨作業</a></li>
                                <li><a class="dropdown-item" asp-controller="Workflow" asp-action="ShipGoods">出貨作業</a></li>
                                <li><a class="dropdown-item" asp-controller="Workflow" asp-action="ReplenishmentReport">補貨建議</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - 花卉庫存管理系統
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
